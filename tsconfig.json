{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2022",
      "moduleResolution": "Node",
      "outDir": "./dist",
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": true,
      "strict": true,
      "paths": {
        "@/*": ["./src/*"]
      },
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"]
  }
  
  